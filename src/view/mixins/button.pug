mixin button(text, className, href, icon, w, h, counter)
	if href
		a.button(href=href, class=className)&attributes(attributes)
			if text
				span!= text
			if icon
				+icon(icon)(width=w, height=h)
			if counter
				span.button__counter!= counter
	else
		button.button(class=className)&attributes(attributes)
			if text
				span!= text
			if icon
				+icon(icon)(width=w, height=h)

