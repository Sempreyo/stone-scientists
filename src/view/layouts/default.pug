doctype html

block vars
include ../mixins/mixins

html(lang='ru')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description', content='Уникальные образцы со всего мира: минералы, окаменелости, метеориты с многомиллионной историей. Сохранность и подлинность образцов доказана Российской академией наук и Министерством культуры РФ. Каждый экземпляр бережно упаковываем. Соберем коллекцию с бюджетом от $100 000. Отвечаем за доставку.')
		meta(name='keywords', content='минералы, окаменелости, метеориты, изделия из камня, подарок')

		link(href='css/main.min.css', rel='stylesheet', type='text/css')
		title= title
		script.
			if (sessionStorage.getItem('preloader') == null) {
				document.querySelector('html').classList.remove('loaded');
				document.querySelector('html').classList.add('body-scroll-lock');
			} else {
				document.querySelector('html').classList.add('loaded');
			}


	body
		block header
			include ../partials/header

		main.main
			block main

		block footer
			include ../partials/footer


	script(src="js/main.min.js")

	block scripts
